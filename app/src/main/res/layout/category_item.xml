<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/dialog_horizontal_padding"
    android:paddingVertical="@dimen/note_vertical_padding"
    android:elevation="@dimen/size6"
    android:background="@color/white"
    android:layout_margin="@dimen/size8">
    <TextView
        android:id="@+id/title_label"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/description"
        app:layout_constraintBottom_toBottomOf="@id/description"
        android:textAlignment="viewStart"
        android:hint="@string/toDo"
        style="@style/TextAppearance.AppCompat.Title"
        />

    <Button
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/size0"
        android:text="@string/toDo"
        android:textSize="@dimen/font12"
        app:icon="@drawable/ic_next"
        app:iconGravity="end"
        style="@style/Widget.Material3.Button.IconButton"
        />
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/description"
        />
    <LinearLayout
        android:id="@+id/expanded_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size32"
        android:layout_marginTop="@dimen/size3"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:gravity="end"
        android:orientation="horizontal">

                <Button
                    android:id="@+id/add"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/primary"
                    app:icon="@drawable/ic_add2"
                    app:iconSize="@dimen/size24" />
                <Button
                    android:id="@+id/edit"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/primary"
                    app:icon="@drawable/ic_edit"
                    app:iconSize="@dimen/size24" />
                <Button
                    android:id="@+id/delete"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/primary"
                    app:icon="@drawable/ic_delete"
                    app:iconSize="@dimen/size24" />
        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/font10"
            android:hint="@string/toDo"
            style="@style/Widget.MaterialComponents.TextView"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>